import java.util.Scanner;

public class Main {

    // 1. Ввід строки з перевіркою
    static String inputString() {
        Scanner sc = new Scanner(System.in);
        while (true) {
            System.out.print("Введіть строку: ");
            String s = sc.nextLine();
            String[] words = s.split("\\s+");

            if (words.length >= 2) {
                boolean ok = true;
                for (String w : words) {
                    if (w.length() < 3) ok = false;
                }
                if (ok) return s;
            }
            System.out.println("Помилка! Мінімум 2 слова, кожне від 3 символів.");
        }
    }

    // 2. Перевертає всю строку
    static String reverseString(String s) {
        return new StringBuilder(s).reverse().toString();
    }

    // 3. Перевертає кожне слово
    static String reverseWords(String s) {
        String[] words = s.split("\\s+");
        String result = "";
        for (String w : words) {
            result += new StringBuilder(w).reverse() + " ";
        }
        return result.trim();
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String s = inputString();

        System.out.print("1 – перевернути всю строку\n2 – перевернути кожне слово\nВибір: ");
        int choice = sc.nextInt();

        if (choice == 1)
            System.out.println(reverseString(s));
        else if (choice == 2)
            System.out.println(reverseWords(s));
        else
            System.out.println("Невірний вибір");
    }
}
